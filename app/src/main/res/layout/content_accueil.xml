<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_acceuil">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="133dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/img_logo" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vendeur2"
            android:id="@+id/img_accueil_1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mag"
            android:id="@+id/img_accueil_2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/woman"
            android:id="@+id/img_accueil_3" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="284dp"
            app:srcCompat="@drawable/magasin_bio"
            android:id="@+id/img_accueil_4" />

    </ViewAnimator>
</LinearLayout>